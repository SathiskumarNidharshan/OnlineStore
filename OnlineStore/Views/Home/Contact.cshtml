@{
    ViewBag.Title = "Contact Us";
    ViewBag.Message = "We'd love to hear from you!";
}

<main class="container my-5">
    <!-- Page Header -->
    <section class="text-center mb-5">
        <h1 class="display-4 text-primary" id="title">@ViewBag.Title</h1>
        <p class="lead text-muted">@ViewBag.Message</p>
    </section>

    <!-- Contact Form and Info Section -->
    <div class="row">
        <!-- Contact Form -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-success">Send Us a Message</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Write your message here" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-paper-plane"></i> Submit
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Contact Details -->
        <div class="col-md-6">
            <div class="card shadow bg-light">
                <div class="card-body">
                    <h2 class="card-title text-info">Reach Us At</h2>
                    <p class="mb-2">
                        <i class="fas fa-map-marker-alt text-danger"></i>
                        <strong>Address:</strong> 123 Main Street, Colombo, Sri Lanka
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-phone text-success"></i>
                        <strong>Phone:</strong> +94 71 234 5678
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-envelope text-primary"></i>
                        <strong>Email:</strong> support@ebookslk.com
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-clock text-warning"></i>
                        <strong>Business Hours:</strong> Mon - Fri, 9:00 AM - 5:00 PM
                    </p>
                </div>
            </div>
            <!-- Social Media Links -->
            <div class="mt-4 text-center">
                <h5>Follow Us</h5>
                <a href="#" class="btn btn-outline-primary btn-sm me-2">
                    <i class="fab fa-facebook-f"></i> Facebook
                </a>
                <a href="#" class="btn btn-outline-info btn-sm me-2">
                    <i class="fab fa-twitter"></i> Twitter
                </a>
                <a href="#" class="btn btn-outline-danger btn-sm me-2">
                    <i class="fab fa-instagram"></i> Instagram
                </a>
                <a href="#" class="btn btn-outline-dark btn-sm">
                    <i class="fab fa-linkedin"></i> LinkedIn
                </a>
            </div>
        </div>
    </div>
</main>